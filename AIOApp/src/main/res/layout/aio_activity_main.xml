<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/bg_weak">

    <com.aliyun.aio.avbaseui.widget.AVActionBar
        android:id="@+id/aio_main_action_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        tools:showTitle="false"
        tools:showLeftView="false"
        tools:showRightView="true"
        tools:rightImageSrc="@drawable/ic_actionbar_more"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/aio_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/text_strong"
        android:layout_below="@+id/aio_main_action_bar"
        android:text="@string/aio_app_title"/>

    <GridView
        android:id="@+id/aio_main_grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:horizontalSpacing="15dp"
        android:verticalSpacing="20dp"
        android:numColumns="2"
        android:layout_below="@+id/aio_main_action_bar"
        android:layout_marginTop="90dp" />


</RelativeLayout>