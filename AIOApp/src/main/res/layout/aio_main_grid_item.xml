<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/main_grid_item_selector">

    <ImageView
        android:id="@+id/aio_main_grid_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/aio_main_grid_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aio_main_grid_icon"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:textColor="@color/text_strong"
        android:textFontWeight="400"
        android:lineHeight="24dp"
        />

    <TextView
        android:id="@+id/aio_main_grid_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aio_main_grid_title"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:textSize="12sp"
        android:textColor="@color/text_ultraweak"
        android:lines="2"
        android:maxLines="2"
        android:textFontWeight="400"
        android:lineHeight="18dp"
        />

    <ImageView
        android:id="@+id/aio_main_grid_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/aio_main_grid_dec"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_main_grid_item_chakan"
        />
</RelativeLayout>