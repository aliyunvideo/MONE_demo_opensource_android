<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  设置背景色  -->
    <item
        android:id="@android:id/background"
        android:drawable="@color/alivc_common_bg_gray_bright"/>

    <!--  设置进度条颜色  -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:endColor="@color/alivc_common_bg_red_darker"
                    android:startColor="@color/alivc_common_bg_red_darker" />
            </shape>
        </clip>
    </item>
</layer-list>