<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/alivc_common_margin_38"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:overScrollMode="never">

    <FrameLayout
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_action_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alivc_danmaku_screen_cost_title"
            android:textColor="@color/alivc_common_font_white"
            android:textSize="@dimen/alivc_common_font_16" />

        <ImageView
            android:id="@+id/iv_refresh"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/alivc_common_margin_16"
            android:background="@drawable/icon_longvideo_w_refresh" />
    </FrameLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/alivc_common_line_1px"
        android:layout_marginTop="@dimen/alivc_common_margin_16"
        android:background="@color/alivc_common_bg_white_alpha_20" />

    <FrameLayout
        android:id="@+id/fm_search_state"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alivc_common_height_group_20"
        android:layout_marginTop="@dimen/alivc_common_margin_24">

        <ImageView
            android:id="@+id/img_search_state"
            android:layout_width="@dimen/alivc_common_size_icon_20"
            android:layout_height="@dimen/alivc_common_size_icon_20"
            android:scaleType="fitXY"
            android:src="@drawable/alivc_screen_cost_airplay" />

        <TextView
            android:id="@+id/tv_search_state_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/alivc_common_margin_30"
            android:gravity="center_vertical"
            android:textColor="@color/alivc_common_font_gray_8B8B8B"
            android:textSize="@dimen/alivc_common_font_16"
            tools:text="AirPlay" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/alivc_common_margin_12" />

</LinearLayout>