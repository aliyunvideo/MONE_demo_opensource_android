<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_dfm_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/alivc_common_height_group_45"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="@dimen/alivc_common_size_icon_20"
        android:layout_height="@dimen/alivc_common_size_icon_20"
        android:scaleType="fitXY"
        android:layout_gravity="center_vertical"
        android:src="@drawable/alivc_screen_cost_airplay" />

    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:singleLine="true"
        android:layout_marginStart="@dimen/alivc_common_margin_30"
        android:layout_marginEnd="@dimen/alivc_common_margin_30"
        android:gravity="center_vertical"
        android:textColor="@color/alivc_common_font_gray_8B8B8B"
        android:textSize="@dimen/alivc_common_font_16"
        tools:text="AirPlay" />


    <ImageView
        android:id="@+id/img_connect_state"
        android:layout_width="@dimen/alivc_common_size_icon_20"
        android:layout_height="@dimen/alivc_common_size_icon_20"
        android:layout_gravity="end|center_vertical"
        android:scaleType="fitXY"
        android:src="@drawable/loading_rotate"
        android:visibility="gone"
        tools:visibility="visible" />

</FrameLayout>