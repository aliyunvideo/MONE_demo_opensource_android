<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1C1D22">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mRecommendCover"
        android:layout_width="140dp"
        android:layout_height="84dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mRecommendVideoTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/home_list_item_left_margin"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="@dimen/home_list_item_left_margin"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="2"
        android:textColor="#FCFCFD"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/mRecommendCover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="12dp"
        tools:text="星际大战-曼达洛人第一季 kskskklsl k kskskksksksks" />

    <TextView
        android:id="@+id/mRecommendVideoInfoTip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="2"
        android:visibility="gone"
        android:text="原创.138万次观看.08-01发布"
        android:textColor="@color/color_888888"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/mRecommendCover"
        app:layout_constraintTop_toBottomOf="@+id/mRecommendVideoTitle" />

    <TextView
        android:id="@+id/mVideoDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:layout_marginTop="11dp"
        android:lines="1"
        android:text="01:22"
        android:textColor="#747A8C"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/mRecommendVideoTitle"
        app:layout_constraintTop_toBottomOf="@+id/mRecommendVideoTitle"/>


</androidx.constraintlayout.widget.ConstraintLayout>