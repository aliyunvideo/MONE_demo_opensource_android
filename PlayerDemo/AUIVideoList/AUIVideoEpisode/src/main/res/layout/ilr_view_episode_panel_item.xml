<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/v_item"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#1C1D22"
    android:orientation="horizontal"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#FCFCFD"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_video_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/iv_play_icon"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#B2B7C4"
            android:textSize="9dp" />

        <ImageView
            android:id="@+id/iv_play_icon"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignTop="@id/tv_video_duration"
            android:layout_alignBottom="@id/tv_video_duration"
            android:layout_marginStart="60dp"
            android:src="@drawable/ic_panel_play" />

        <TextView
            android:id="@+id/tv_play_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/iv_play_icon"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="#B2B7C4"
            android:textSize="9dp" />

    </RelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/iv_sound_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_panel_sound"
        android:visibility="gone" />

</LinearLayout>