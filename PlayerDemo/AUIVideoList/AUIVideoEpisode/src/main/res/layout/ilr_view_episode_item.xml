<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_recycler_view_item">

    </include>

    <!--  Add episode video list UI components here  -->

    <com.alivc.auiplayer.videoepisode.component.AUIVideoInteractiveComponent
        android:id="@+id/v_interactive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="180dp" />

    <com.alivc.auiplayer.videoepisode.component.AUIVideoDetailComponent
        android:id="@+id/v_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="98dp" />

    <com.alivc.auiplayer.videoepisode.component.AUIEpisodeBarComponent
        android:id="@+id/v_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="32dp" />

    <com.alivc.auiplayer.videoepisode.component.AUIEpisodePanelComponent
        android:id="@+id/v_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone" />

</FrameLayout>