<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="av_actionbar">
        <attr name="showTitle" format="boolean" />
        <attr name="showLeftView" format="boolean" />
        <attr name="showRightView" format="boolean" />
        <attr name="title" format="string" />
        <attr name="leftImageBackground" format="reference" />
        <attr name="leftImageSrc" format="reference" />
        <attr name="rightImageBackground" format="reference" />
        <attr name="rightImageSrc" format="reference" />
    </declare-styleable>

    <declare-styleable name="AVCircleProgressView">
        <attr name="ringBgColor" format="color"/>
        <attr name="ringFgColor" format="color"/>
        <attr name="ringWidth" format="dimension"/>
        <attr name="progress" format="integer"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="progressType">
            <enum name="fill" value="0"/>
            <enum name="stroke" value="1"/>
        </attr>
        <attr name="isShowText">//是否显示文本：0.显示 1.不显示
            <enum name="yes" value="0"/>
            <enum name="no" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="AVPanelItemView">
        <attr name="statusEnable" format="boolean" />
        <attr name="textColorEnable" format="color"/>
        <attr name="textColorDisable" format="color"/>
        <attr name="imageEnable" format="reference" />
        <attr name="imageDisable" format="reference" />
        <attr name="itemName" format="reference" />
    </declare-styleable>
</resources>