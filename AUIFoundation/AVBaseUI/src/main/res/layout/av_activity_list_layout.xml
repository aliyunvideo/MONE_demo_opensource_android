<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/bg_weak"
    android:orientation="vertical">

    <com.aliyun.aio.avbaseui.widget.AVActionBar
        android:id="@+id/av_base_title"
        style="@style/AVActionBar_Style"
        tools:showTitle="true"
        tools:showLeftView="false"
        tools:showRightView="false"
        tools:leftImageSrc="@drawable/ic_av_action_bar_back"
        tools:rightImageSrc="@drawable/ic_actionbar_more"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/av_base_main_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

</LinearLayout>