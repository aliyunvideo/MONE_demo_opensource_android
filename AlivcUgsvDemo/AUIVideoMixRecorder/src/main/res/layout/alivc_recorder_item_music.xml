<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/aliyun_music_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/alivc_common_margin_8"
        android:layout_marginTop="@dimen/alivc_common_margin_8"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/aliyun_music_select"
            android:layout_width="@dimen/alivc_common_size_icon_48"
            android:layout_height="@dimen/alivc_common_size_icon_48"
            android:scaleType="centerInside"
            android:src="@mipmap/aliyun_svideo_icon_music_select" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aliyun_music_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/alivc_common_font_white"
                android:textSize="@dimen/alivc_common_font_18" />

            <TextView
                android:id="@+id/aliyun_music_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/alivc_common_margin_8"
                android:gravity="start"
                android:textColor="@color/alivc_common_font_white_alpha_50"
                android:textSize="@dimen/alivc_common_font_12" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/aliyun_music_info_layout"
        android:layout_height="@dimen/alivc_common_height_group_80"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/alivc_common_height_group_70">

            <com.aliyun.svideo.base.widget.MusicHorizontalScrollView
                android:id="@+id/aliyun_scroll_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:overScrollMode="never"
                android:scrollbars="none">

                <com.aliyun.svideo.widget.MusicWaveView
                    android:id="@+id/aliyun_wave_view"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/alivc_common_height_group_50" />
            </com.aliyun.svideo.base.widget.MusicHorizontalScrollView>

            <ImageView
                android:id="@+id/aliyun_music_selcet_bg"
                android:layout_width="@dimen/alivc_common_width_icon_200"
                android:layout_height="@dimen/alivc_common_height_icon_40"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@mipmap/aliyun_svideo_bg_music_select" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/alivc_common_height_icon_40"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@id/aliyun_music_selcet_bg"
                android:src="@color/alivc_common_bg_black_alpha_30" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/alivc_common_height_icon_40"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/aliyun_music_selcet_bg"
                android:src="@color/alivc_common_bg_black_alpha_30" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/alivc_common_height_icon_15"
                android:layout_alignParentTop="true"
                android:src="@color/alivc_common_bg_black_alpha_30" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/alivc_common_height_icon_15"
                android:layout_alignParentBottom="true"
                android:src="@color/alivc_common_bg_black_alpha_30" />

            <TextView
                android:id="@+id/aliyun_music_start_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/aliyun_music_selcet_bg"
                android:layout_below="@id/aliyun_music_selcet_bg"
                android:text="1111"
                android:textColor="@color/alivc_common_font_white"
                android:textSize="@dimen/alivc_common_font_10" />

            <TextView
                android:id="@+id/aliyun_music_end_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/aliyun_music_selcet_bg"
                android:layout_below="@id/aliyun_music_selcet_bg"
                android:text="1111"
                android:textColor="@color/alivc_common_font_white"
                android:textSize="@dimen/alivc_common_font_10" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/alivc_common_font_10"
            android:background="@color/alivc_common_bg_black_alpha_30" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/alivc_common_line_1dp"
        android:layout_marginLeft="@dimen/alivc_common_margin_48"
        android:background="@color/alivc_common_line_white_alpha_30" />
</LinearLayout>
