<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="viewModel"
            type="com.aliyun.svideo.editor.effect.VideoEffectItemViewModel" />

    </data>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp">

        <FrameLayout
            android:layout_width="54dp"
            android:layout_height="55dp" >
            <com.aliyun.svideo.editor.common.widget.RoundedRectangleImageView
                android:id="@+id/ugsv_editor_effect_item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:iv_topLeftCornerRadius="2dp"
                app:iv_topRightCornerRadius="2dp"
                android:layout_gravity="center_horizontal" />
            <ImageView
                android:id="@+id/ugsv_editor_select_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ugsv_video_filter_seleted"
                android:scaleType="centerInside"
                android:visibility="gone"/>
        </FrameLayout>

        <TextView
            android:id="@+id/ugsv_editor_clip_item_title"
            android:layout_width="54dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:textFontWeight="400"
            android:textColor="@color/text_strong"
            android:layout_marginRight="8dp"
            android:maxLines="1"
            android:background="@drawable/ugsv_editor_effect_item_bg"
            android:gravity="center|center_horizontal" />
    </LinearLayout>

</layout>