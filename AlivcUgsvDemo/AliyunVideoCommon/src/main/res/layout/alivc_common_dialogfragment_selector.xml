<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/alivc_common_dialog_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/alivc_common_bg_white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/alivc_common_bg_white_gray" />

    <TextView
        android:id="@+id/alivc_tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/alivc_common_bg_white"
        android:gravity="center"
        android:text="@string/alivc_common_cancel"
        android:textColor="@color/alivc_common_font_gray_333333"
        android:textSize="16sp" />
</LinearLayout>